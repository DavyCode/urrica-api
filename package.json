{
  "name": "urrica-api",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "start": "tsc && node ./dist/server.js",
    "build": "tsc",
    "debug": "export DEBUG=* && npm start",
    "dev": "NODE_ENV=development export DEBUG=* && tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "release": "standard-version",
    "lint": "eslint . --ext .ts",
    "snyk": "snyk test",
    "lint:format": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc . --ext .ts --write",
    "prebuild": "npm install typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavyCode/urrica-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "davycode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DavyCode/urrica-api/issues"
  },
  "homepage": "https://github.com/DavyCode/urrica-api#readme",
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/shortid": "^0.0.29",
    "accesscontrol": "^2.2.1",
    "argon2": "^0.30.2",
    "aws-sdk": "^2.1311.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "email-templates": "^8.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-winston": "^4.2.0",
    "hpp": "^0.2.3",
    "http-errors": "~1.6.2",
    "http-status": "^1.6.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.7.5",
    "mongoose-unique-validator": "^3.1.0",
    "preview-email": "^3.0.7",
    "shortid": "^2.2.16",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.38",
    "@types/chai": "^4.3.4",
