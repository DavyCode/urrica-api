{
  "name": "urrica-api",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "build": "tsc",
    "prebuild": "npm install typescript",
    "start:tsc": "node dist/app.js",
    "start": "tsc && node ./dist/app.js",
    "debug": "export DEBUG=* && npm start",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "dev:server": "export DEBUG=* && nodemon -e ts --exec  \"npm run build\" && \"npm start\"",
    "release": "standard-version",
    "lint": "eslint . --ext .ts",
    "snyk": "snyk test",
    "lint:format": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc . --ext .ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavyCode/urrica-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "davycode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DavyCode/urrica-api/issues"
  },
  "homepage": "https://github.com/DavyCode/urrica-api#readme",
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/shortid": "^0.0.29",
    "argon2": "^0.30.2",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-winston": "^4.2.0",
    "hpp": "^0.2.3",
    "http-errors": "~1.6.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.5",
    "shortid": "^2.2.16",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
