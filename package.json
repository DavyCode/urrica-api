    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/email-templates": "^8.0.0",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/mongoose-unique-validator": "^1.0.6",
    "@types/node": "^18.11.10",
    "@types/preview-email": "^2.0.1",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
