{
  "name": "fleepstash-api",
  "version": "1.0.0",
  "description": "API backend for fleepstash services",
  "scripts": {
    "start": "npm run aws:forever",
    "start:old:": "tsc && node ./dist/server.js",
    "debug": "export DEBUG=* && npm start",
    "dev": "NODE_ENV=development export DEBUG=* && tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' npx tsc",
    "clean": "rimraf dist",
    "stop:forever": "forever stopall",
    "start:forever": "node start.js",
    "prod:forever": "NODE_ENV=production npm-run-all stop:forever clean build start:forever",
    "aws:forever": "NODE_ENV=production npm-run-all stop:forever start:forever",
    "release": "standard-version",
    "lint": "eslint . --ext .ts",
    "snyk": "snyk test",
    "lint:format": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc . --ext .ts --write"
  },
  "keywords": [],
  "author": "davycode",
  "license": "MIT",
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "aws-sdk": "^2.1467.0",
    "axios": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.2.0",
    "dotenv": "^8.0.0",
    "ejs": "^3.1.9",
    "email-templates": "^11.1.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.1",
    "express-winston": "^4.0.5",
    "forever": "^0.14.2",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "http-status": "^1.6.2",
    "joi": "^17.4.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.4",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "preview-email": "^3.0.19",
    "redis": "^4.6.7",
    "rimraf": "^5.0.5",
    "tsc-watch": "^6.0.4",
    "url": "^0.11.1",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^6.2.0",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.39",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/email-templates": "^10.0.2",
    "@types/express": "^4.17.11",
    "@types/hpp": "^0.2.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.6",
    "@types/preview-email": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.19",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  }
}
